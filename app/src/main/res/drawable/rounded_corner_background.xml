<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the solid color for the background -->
    <solid android:color="#000000"/> <!-- Replace with the desired color -->

    <!-- Define the corner radius for the rounded corners -->
    <corners android:radius="16dp"/> <!-- Adjust the radius as needed -->

    <!-- Optionally, define padding within the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>